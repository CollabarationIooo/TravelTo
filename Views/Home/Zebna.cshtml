@model List<Turebi>;

<div class="grid-container">
    <div class="row">

        <div class="col-md-12 text-center">

            <h2>
                ყველა ტური
            </h2>
        </div>
    </div>
    <form method="post" asp-controller="Home" asp-action="Zebna">

   
    <div class="grid-item" style="grid-row: 1/4">
    <div style="width:400px;" >
        <input style="width:300px;position:relative;" type="search" name="names" />

            <button type="submit" class="btn btn-outline-secondary">
                    <i class="bi bi-search" style="font-size:20px"></i>
           </button>

            <label>ლოკაციები</label>


            <select class="form-select form-select-sm" aria-label="Small select example" name="selected" >

                <option value="">აირჩიე ლოკაცია</option>
                @foreach(var i in ViewBag.turebi)
                {
                    <option value="@i">@i</option>

                }
            </select>
    </div>     
    
    </div>
    </form>
    @foreach (var i in Model)
    {
        <a asp-controller="Home" asp-action="GetTuri" asp-route-id="@i.id" class="btn btn-group">

            <div style="width:400px" class="grid-item" >

                <img src="~/turebi/@i.image_name" width="400px" height="300px" />

                <div class="row">

                    <div class="col-md-6 text-start">
                        <h2>@i.Name</h2>

                    </div>
                    <div class="col-md-6 text-end">
                        <h3>დეტალების ნახვა</h3>

                    </div>
                </div>

            </div>
        </a>
    }
</div>