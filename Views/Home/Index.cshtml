@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager;
@inject UserManager<User> UserManager;

@model List<Turebi>;

@{
    ViewData["Title"] = "Home Page";
}

<span class="text-danger">
    @TempData["WarmatebitWaishala"]
</span>
<div class="container">
    <div style="display:flex; flex-direction: column; align-items: center; margin-top: 60px;">
        <button class="hh5" style="font-size: 26px; ">ყველა ტურისტული სერვისი ერთ სივრცეში</button>
        <button class="hh5" style="font-size: 13px;">
            მოითხოვეთ ყველა სერვისი ერთ სივრცეში
        </button>
    </div>

    <div class="container mt-3">
        <div class="row justify-content-center" style="background-color: white; border-radius: 15px; border: 0.1px solid dimgrey; padding: 20px;">
            <div class="col-6 col-sm-auto mb-2">
                <button type="button" class="btn btn-primary btn-lg w-100">ავიაბილეთები</button>
            </div>
            <div class="col-6 col-sm-auto mb-2">
                <a asp-controller="Home" asp-action="Yvela" class="btn btn-secondary btn-lg w-100">ტურები</a>
            </div>
            <div class="col-6 col-sm-auto mb-2">
                <button type="button" class="btn btn-primary btn-lg w-100">სასტუმრო</button>
            </div>
            <div class="col-6 col-sm-auto mb-2">
                <button type="button" class="btn btn-secondary btn-lg w-100">ტრანსფერი</button>
            </div>
            <div class="col-6 col-sm-auto mb-2">
                <button type="button" class="btn btn-secondary btn-lg w-100">სავიზო მხარდაჭერა</button>
            </div>
        </div>

        <div class="text-center mt-3">
            <button class="hh5" style="font-size: 26px;">დღის შეთავაზება</button>
            <br>
            <button class="hh5" style="font-size: 13px;">ყველას ნახვა</button>
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="col-5" style="width: 22px">
            <a asp-controller="Home" asp-action="Add"><i class="bi bi-plus-circle-fill" style="font-size:25px"></i></a>
        </div>
    }
    else
    {

    }


</div>
<div class="owl-carousel owl-theme" style="margin-left: 25px">
    @{
        int index = 0;
        foreach (var product1 in Model)
        {
            <div style="display: flex; flex-direction: column;align-items:center">
                <div class="item">
                    <a asp-controller="Home" asp-action="GetTuri" asp-route-id="@product1.id">

                <img src="/turebi/@product1.image_name" style="width: 384px; border-radius: 5px; height: 384px; margin: 10px ;" alt="img">
                    </a>
                </div>
                <div style="display: flex; justify-content: space-between;">
                    <h4>@product1.Name</h4>
                    <h4 style=" display: flex;margin-right: 50px ;">
                        @product1.Price
                        <img src="https://www.turebi.ge/templatesv2/assets/img/green-gel.svg" style="width: 25px; height: 20px; margin-top: 5px" alt="price" class="w-unset mr-5">
                    </h4>
                </div>
            </div>
            index++;
        }
    }
</div>
<div style="display:flex; flex-direction: column; align-items: center; margin-top: 20px;">
    <button class="hh5" style="font-size: 26px; ">ტოპ შეთავაზებები</button>
    <button class="hh5" style="font-size: 13px;">
        ყველა ტური საზღვარგარეთ
    </button>
</div>
@if (User.IsInRole("Admin"))
{
    <a asp-controller="Home" asp-action="Add">
        <i class="bi bi-plus-circle-fill" style="font-size:25px"></i>
    </a>

    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @foreach (var i in Model)
            {
                <div class="carousel-item @(Model.First() == i ? "active" : "")">
                    <a asp-controller="Home" asp-action="GetTuri" asp-route-id="@i.id">
                        <img src="~/turebi/@i.image_name" class="d-block w-100 img-fluid" alt="@i.Name" style="max-height: 80vh; object-fit: cover">
                    </a>
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@i.Name</h5>
                        <p>@i.Description</p>
                    </div>
                </div>
            }
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

       

}
else
{
    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @foreach (var i in Model)
            {
                <div class="carousel-item @(Model.First() == i ? "active" : "")">
                    <a asp-controller="Home" asp-action="GetTuri" asp-route-id="@i.id">
                        <img src="~/turebi/@i.image_name" class="d-block w-100 img-fluid" alt="@i.Name" style="max-height: 80vh; object-fit: cover;">
                    </a>
                    <div class="carousel-caption d-block" style="bottom: 20px; background-color: rgba(0, 0, 0, 0.7); padding: 10px; border-radius: 5px;">
                        <h5 style="font-size: 1.2rem;">@i.Name</h5> <!-- Adjusted font size -->
                        <p style="font-size: 0.9rem;">@i.Description</p> <!-- Adjusted font size -->
                    </div>
                </div>
            }
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

}